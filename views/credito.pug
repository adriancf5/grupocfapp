doctype html
html
  head
    title
  body
    div(style="width:100%; position:relative; float:left;")
      img(src="/images/logo.png" style="width:40%; padding-left:30%; padding-top:15px;")
    div(style="width:100%; position:relative; float:left; clear:both;")
      strong(style="position:relative; float:left; padding:5px; text-align: center")=cli[0].NOMBRE
    div(style="width:100%; position:relative; float:left; clear:both;")
      div(style="position:relative; float:left; padding:5px;") Credito :
      strong(style="position:relative; float:right; padding:5px;")=cli[0].CREDITO.toFixed(2)
    div(style="width:100%; position:relative; float:left; clear:both;")
      div(style="position:relative; float:left; padding:5px;") Disponible:
      strong(style="position:relative; float:right; padding:5px;")=parseFloat(cli[0].CREDITO - D.Disponible).toFixed(2)
    div(style="width:100%; position:relative; float:left; clear:both;")
      div(style="position:relative; float:left; padding:5px;") Saldo Vencido:
      if cob
        - var total = 0
        for i in cob
          - total = total + i.SALDO
        strong(style="position:relative; float:right; padding:5px; color:red")=total
      else
        strong(style="position:relative; float:right; padding:5px; color:red")=total

    div(style="width:100%; position:relative; float:left; padding:5px; clear:both;") Documentos Vencidos:
    div(style="width:100%; position:relative; float:left; padding:5px; clear:both;")
      if cob
        for n in cob
          div(style="width:20%; position:relative; float:left; padding-left:5px; ")=n.TIPO_DOC
          div(style="width:20%; position:relative; float:left; padding-left:5px; ")=n.NO_REFEREN
          div(style="width:50%; position:relative; float:left; padding-left:5px; text-align: right")=n.SALDO
