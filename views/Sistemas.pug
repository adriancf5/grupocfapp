doctype html
html
    head
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        meta(name='viewport' content='initial-scale=1, user-scalable=no', width='device-width' )
        link(rel='stylesheet', href='/stylesheets/ioicon.css')
        link(rel='stylesheet', href='/stylesheets/perfil.css')
        link(rel='stylesheet', href='/stylesheets/sistemas.css')
        link(rel='stylesheet', href='/css/bootstrap-datetimepicker.min.css')

    body(style="background-color:rgb(242, 242, 242);")
          nav(role="navigation").navbar.navbar-defaul.navbar-fixed-top.no-print
            div.container

                div.navbar-header
                    img(src="/images/logo.png").logo

                    span.nameEmp GRUPO CF
                    button(id="bartab" type="button" data-toggle="collapse"  data-target="#sidebar-collapse" aria-expanded="false" aria-controls="navbar").navbar-toggle.collapsed
                        span.sr-only Toggle navigation
                        span.ion-navicon-round

                    a(href="#").navbar-brand

                div(id="navbar" ).navbar-collapse.collapse
                    ul.nav.navbar-nav

                    ul.nav.navbar-nav.navbar-right
                        //li.dropdown
                            a.ion-android-settings(href="#drop" role="button" class="dropdown-toggle" data-toggle="dropdown")
                            ul.dropdown-menu(role="menu" aria-labelledby="drop")
                                li
                                    a(href="#Config") Configuracion
                                li
                                    a Opcion 2
                        li.dropdown.bienvenido
                            p.wellcome Bienvenido(a)
                                if (user)
                                    =user.Usuario
                        li.dropdown
                            a.ion-ios7-contact(href="#drop1" role="button" class="dropdown-toggle" data-toggle="dropdown")
                            ul.dropdown-menu(role="menu" aria-labelledby="drop1")
                                li
                                    a(href="/logout").ion-log-out Salir


        div.row.col-sm-7.col-sm-offset-1(style="margin-top:50px;")
            div.modal-header
                //button(type="button" class="close" data-dismiss="modal" aria-hidden="true").ion-close-round
                h4 Soporte Sistemas
            if mesage != ''
              div.alert.alert-warning=mesage

            div.modal-body
                form(action="/SoporteSistemas" method="post")
                    div.form-group.clearboth
                        div.clearboth Cliente
                        input(type="text" name="cliente" placeholder="cliente" autocomplete="off").col-sm-6.margin-tbm.clients
                        input(type="text" name="nombre" style="display:none")
                        div#clientes.clearboth
                        div#nombreCliente.clearboth
                    div.form-group.clearboth
                        div.ClientNomb
                        div.ClientObserv
                    div.form-group.clearboth
                        div.clearboth Reportó
                        input(type="text" name="contacto" placeholder="reporto").col-sm-6
                    div.form-group.clearboth
                        select(name="tServicio" id="serviceT" ).col-sm-5.margin-tbm
                            option(value="") Tipo de servicio
                            option(value="remoto") Remoto
                            option(value="telefonico") Telefonico
                            option(value="oficina") Oficina
                            option(value="Visita") Instalaciones cliente
                        div.detalleCre
                    div.form-group.clearboth
                        div.clearboth Clave servicio
                        input(type="text" name="servicioS" placeholder="servicio").col-sm-6.margin-tbm.servicios
                        div#products.clearboth
                    div.form-group.clearboth
                        div.clearboth Tiempo
                        input(type="text" name="tiempo" placeholder="1 hora").col-sm-4.margin-tbm
                        select(name="estatus" id="serviceT" style="margin-left:10px;").col-sm-4.margin-tbm
                            option(value="Finalizado") Finalizado
                            option(value="Pendiente") Pendiente

                    div.form-group.clearboth
                        label Descripcion del servicio
                        textarea(type="text" name="observacion" placeholder="observaciones" autocomplete="off").form-control.comentarios

                    div.modal-footer.formgroup.clearboth
                        //button(type="button" class="btn btn-default" data-dismiss="modal") Cerrar
                        button(type="submit" class="btn btn-primary") Guardar

          div.col-sm-4(style="margin-top:50px; padding-left:30px;")
              div.container(style='margin-top:20px; padding-left:0px;')
                div.row
                  div.col-xs-10
                    div.form-group
                      div.input-group.date(id="datetimepicker1")
                        input(type="text" data-format="yyyy-MM-dd hh:mm:ss").form-control.fechahora
                        span.input-group-addon
                          span.glyphicon.glyphicon-calendar
              div(style="margin-top:20px")
                h4 Servicios
                  div(style="display:none").fecha=date
              a(href='reporteSistemas/?vend='+ user.Usuario + '&fecha=' + date + '' TARGET="_BLANK" style="margin-left:40px; font-size:2.2em; position:absolute; top:20px; left:80%; color:darkslategray").ion-android-printer

              if servicios
                    for i in servicios
                        div.clearboth(style="margin-top:20px;")
                          div=i.Nombre
                          div=i.Sdescripcion
        script(src='/javascripts/jquery-2.1.0.js' type='text/javascript')
        script(src='' type="text/javascript")
        script(src='/javascripts/sistemas.js' type="text/javascript")
        script(src='/javascripts/datetime/Moment.js' type='text/javascript')
        //script(src='/javascripts/bootstrap.min.js' type='text/javascript')
        script(src='/javascripts/datetime/bootstrap-datetimepicker.min.js' type='text/javascript')
