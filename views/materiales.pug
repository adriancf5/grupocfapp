    input(type="text" name="Precio" placelholder="Precio" autocomplete="off" ).col-sm-2
    
div.form-group.clearboth
    div.venta(style="margin-bottom:10px!important")
        div.encabe(style="width:50%!important;") Lista de Materiales
        div.encabe Venta:
            if partidas != ""  
                =partidas[0].VENTA
        if partidas != ""  
            for i in partidas
                section.partida.col-xs-12
                    - var precio = (i.PRECIO * 1.16).toFixed(2)
                    div.col-xs-10

                        div=i.OBSERV
                        div='Cantidad:' + i.CANTIDAD + ' ' + 'Precio: ' + precio
                        div='Clave: ' + i.ARTICULO
                           
                    div.col-xs-2
                        //div.ion-edit
                        div(data-set="partvta" value=i.ID_SALIDA name="materiales" articulo=i.ARTICULO venta=partidas[0].VENTA url="/dePartida" type-send="delete" ).ion-android-trash